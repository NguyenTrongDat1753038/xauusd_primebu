# TradeBot Hub Frontend Configuration
# Copy this file to .env and update values as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# Backend Integration
FASTAPI_URL=http://localhost:8000
FASTAPI_TIMEOUT=30000

# Redis Configuration (if using with FastAPI)
REDIS_URL=redis://localhost:6379/0

# Puppeteer Configuration (PDF Generation)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
CORS_ORIGIN=*
SESSION_SECRET=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_MAX_CONNECTIONS=100

# Cache Configuration
CACHE_MAX_AGE=3600000
CACHE_ENABLE_GZIP=true
CACHE_ENABLE_BROTLI=true

# Features
ENABLE_PDF_GENERATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SERVICE_WORKER=true
ENABLE_OFFLINE_SUPPORT=true

# MT5 Integration
MT5_TERMINAL_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe
MT5_TIMEOUT=60000

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Database (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradebot
DB_USER=trader
DB_PASSWORD=password

# Docker Compose (reference)
# FastAPI backend will be available at http://fastapi:8000
# Redis will be available at redis://redis:6379
# PostgreSQL will be available at postgres://postgres:5432
